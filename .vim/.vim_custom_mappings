" Mappings
" noremap, inoremap, vnoremap
no <down> <Nop>
no <left> <Nop>
no <right> <Nop>
no <up> <Nop>
ino <down> <Nop>
ino <left> <Nop>
ino <right> <Nop>
ino <up> <Nop>
vno <down> <Nop>
vno <left> <Nop>
vno <right> <Nop>
vno <up> <Nop>

"Commenting
no <C-/> gc
vno <C-/> gc

" USE TAB WITH YouCompleteMe
" MAP OTHER KEYS TO SNIPMATE
:imap <leader>s <Plug>snipMateNextOrTrigger
:smap <leader>s <Plug>snipMateNextOrTrigger

:map <leader><leader> :NERDTreeToggle<CR>
let NERDTreeShowHidden=1

:map <leader>l :tabn<CR>
:map <leader>h :tabp<CR>
:map <leader>c :tab new<CR>
:map <leader>q :tab close<CR>
:map <leader>- :split<CR>
:map <leader>/ :vsplit<CR>

:map <C-h> <C-w>h
:map <C-j> <C-w>j
:map <C-k> <C-w>k
:map <C-l> <C-w>l
:nnoremap<C-q> :hide<CR>

":nnoremap <C-e> :execute 'vnew | 0read ! interpreter' expand('%')

" custom mapping
let g:eval_viml_n = "<C-c>"
let g:eval_viml_v = "<C-c>"
"
" " manual mapping
let g:eval_viml_map_keys = 0
nmap <silent> <C-c> <Plug>eval_viml
vmap <silent> <C-c> <Plug>eval_viml_region"
